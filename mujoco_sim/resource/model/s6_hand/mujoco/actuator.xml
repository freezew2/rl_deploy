
<mujoco model = "right_hand_actuator">

    <actuator>
        <position name = "L_thumb_swing_joint_actuator" joint = "L_thumb_swing_joint" kp="10" ctrlrange="0 2.286" />
        <position name = "L_thumb_1_joint_actuator" joint = "L_thumb_1_joint" kp="10" ctrlrange="0 0.78" />
        <position name = "L_index_1_joint_actuator" joint = "L_index_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "L_middle_1_joint_actuator" joint = "L_middle_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "L_ring_1_joint_actuator" joint = "L_ring_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "L_pinky_1_joint_actuator" joint = "L_pinky_1_joint" kp="10" ctrlrange="0 1.7" />

        <position name = "R_thumb_swing_joint_actuator" joint = "R_thumb_swing_joint" kp="10" ctrlrange="0 2.286" />
        <position name = "R_thumb_1_joint_actuator" joint = "R_thumb_1_joint" kp="10" ctrlrange="0 0.78" />
        <position name = "R_index_1_joint_actuator" joint = "R_index_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "R_middle_1_joint_actuator" joint = "R_middle_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "R_ring_1_joint_actuator" joint = "R_ring_1_joint" kp="10" ctrlrange="0 1.7" />
        <position name = "R_pinky_1_joint_actuator" joint = "R_pinky_1_joint" kp="10" ctrlrange="0 1.7" />
    </actuator>

    <!-- Equality constraints for mimic joints -->
    <equality>
        <!-- Thumb finger mimic constraints -->
        <joint joint1="L_thumb_2_joint" joint2="L_thumb_1_joint" polycoef="0 0.40 0 0 0"/>
        <joint joint1="L_thumb_3_joint" joint2="L_thumb_1_joint" polycoef="0 0.60 0 0 0"/>
        
        <!-- Index finger mimic constraint -->
        <joint joint1="L_index_2_joint" joint2="L_index_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- Middle finger mimic constraint -->
        <joint joint1="L_middle_2_joint" joint2="L_middle_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- Ring finger mimic constraint -->
        <joint joint1="L_ring_2_joint" joint2="L_ring_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- pinky finger mimic constraint -->
        <joint joint1="L_pinky_2_joint" joint2="L_pinky_1_joint" polycoef="0 1 0 0 0"/>

        <!-- Thumb finger mimic constraints -->
        <joint joint1="R_thumb_2_joint" joint2="R_thumb_1_joint" polycoef="0 0.40 0 0 0"/>
        <joint joint1="R_thumb_3_joint" joint2="R_thumb_1_joint" polycoef="0 0.60 0 0 0"/>
        
        <!-- Index finger mimic constraint -->
        <joint joint1="R_index_2_joint" joint2="R_index_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- Middle finger mimic constraint -->
        <joint joint1="R_middle_2_joint" joint2="R_middle_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- Ring finger mimic constraint -->
        <joint joint1="R_ring_2_joint" joint2="R_ring_1_joint" polycoef="0 1 0 0 0"/>
        
        <!-- pinky finger mimic constraint -->
        <joint joint1="R_pinky_2_joint" joint2="R_pinky_1_joint" polycoef="0 1 0 0 0"/>
    </equality>

</mujoco>